<section class="school-info-section">
  <div class="page-header mb-4">
    <h1 class="page-title"><i class="fas fa-user-graduate text-primary me-2"></i> Apply Section</h1>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-header bg-white border-bottom"><h5 class="mb-0 fw-semibold text-dark"><i class="fas fa-plus-circle text-primary me-2"></i> New Application</h5></div>
    <div class="card-body p-4">
      <form action="/home/apply" method="POST" class="row g-4">
        <div class="col-md-6"><label class="form-label fw-semibold">Name</label><input type="text" name="name" class="form-control shadow-sm" required /></div>
        <div class="col-md-6"><label class="form-label fw-semibold">Class Applied</label><input type="text" name="classApplied" class="form-control shadow-sm" /></div>
        <div class="col-md-12"><label class="form-label fw-semibold">Message</label><textarea name="message" rows="3" class="form-control shadow-sm"></textarea></div>
        <div class="col-12 text-end mt-3"><button class="btn btn-primary px-4"><i class="fas fa-save me-2"></i> Save</button></div>
      </form>
    </div>
  </div>

  <%- include('../partials/table', { title: 'Applications', data, fields: ['name','classApplied','message'], deletePath: '/home/apply' }) %>
</section>
